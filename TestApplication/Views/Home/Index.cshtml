@model VideoListViewModel

<div class="row text-center">
    <img style="margin-left:3%" src="~/Images/20200113_175323.jpg" alt="" width="1100" height="500"/>
</div>

    @foreach(var video in Model.Videos)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <h2>
                    <a>@video.Title</a>
                </h2>
                <img src="@video.ImageUrl" alt="" width="150" height="400"/>
                <div class="caption">
                    <p>@video.ShortDescription</p>
                    <h3 class="pull-right">@video.Price.ToString("c")</h3>
                </div>
            </div>
        </div>
    }
